<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/answer_powerhouse"
            style="@style/Question"
            android:text="@string/question_powerhouse" />

        <EditText
            android:id="@+id/answer_powerhouse"
            style="@style/Hint"
            android:hint="@string/hint_edit_view" />


        <TextView
            android:id="@+id/textView2"
            style="@style/Question"
            android:text="@string/question_peru_capital" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiobutton1Q4"
                style="@style/IconList"
                android:text="@string/answer1_peru_capital" />

            <RadioButton
                android:id="@+id/radiobutton2Q4"
                style="@style/IconList"
                android:text="@string/answer2_peru_capital" />

            <RadioButton
                android:id="@+id/radiobutton3Q4"
                style="@style/IconList"
                android:layout_marginBottom="24dp"
                android:text="@string/answer3_peru_capital" />

        </RadioGroup>


        <TextView
            android:id="@+id/textView"
            style="@style/Question"
            android:text="@string/question_os" />

        <CheckBox
            android:id="@+id/checkbox1Q3"
            style="@style/IconList"
            android:text="@string/answer1_os" />

        <CheckBox
            android:id="@+id/checkbox2Q3"
            style="@style/IconList"
            android:text="@string/answer2_os" />

        <CheckBox
            android:id="@+id/checkbox3Q3"
            style="@style/IconList"
            android:layout_marginBottom="24dp"
            android:text="@string/answer3_os" />



        <TextView
            style="@style/Question"
            android:text="@string/question_southpark" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiobutton1Q4"
                style="@style/IconList"
                android:text="@string/answer1_southpark" />

            <RadioButton
                android:id="@+id/radiobutton2Q4"
                style="@style/IconList"
                android:text="@string/answer2_southpark" />

            <RadioButton
                android:id="@+id/radiobutton3Q4"
                style="@style/IconList"
                android:layout_marginBottom="24dp"
                android:text="@string/answer3_southpark" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            style="@style/Question"
            android:text="@string/question_tungsten" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiobutton1Q5"
                style="@style/IconList"
                android:text="@string/answer1_tungsten" />

            <RadioButton
                android:id="@+id/radiobutton2Q5"
                style="@style/IconList"
                android:text="@string/answer2_tungsten" />

            <RadioButton
                android:id="@+id/radiobutton3Q5"
                style="@style/IconList"
                android:layout_marginBottom="24dp"
                android:text="@string/answer3_tungsten" />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#69686b"
                android:onClick="submitAnswers"
                android:text="@string/submit_answers_button"
                android:textColor="#ffffff" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>